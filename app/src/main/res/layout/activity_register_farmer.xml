<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_light"
    tools:context=".RegisterFarmer">


    <TextView
        android:id="@+id/account_type"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:text="CHOOSE REGISTRATION TYPE"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold">

    </TextView>

    <androidx.cardview.widget.CardView
        android:id="@+id/farmer_cycle"
        android:layout_width="130dp"
        android:layout_height="130dp"

        android:layout_below="@+id/account_type"
        android:layout_marginLeft="20dp"

        android:layout_marginTop="60dp"

        app:cardCornerRadius="130dp">

        <ImageView
            android:id="@+id/farmer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/vector_account">


        </ImageView>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/expert_cycle"
        android:layout_width="130dp"
        android:layout_height="130dp"

        android:layout_below="@+id/account_type"
        android:layout_centerHorizontal="true"

        android:layout_marginLeft="80dp"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@+id/farmer_cycle"
        app:cardCornerRadius="130dp">

        <ImageView
            android:id="@+id/expert"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/vector_account">


        </ImageView>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/farmer_text"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/farmer_cycle"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="70dp"
        android:text="Farmer"


        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20dp"


        >

    </TextView>

    <TextView
        android:id="@+id/exprt_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/expert_cycle"
        android:layout_alignLeft="@+id/farmer_text"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="70dp"


        android:text="Expert"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20dp"


        >

    </TextView>


</RelativeLayout>