<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_light"
    tools:context=".FirstExpert">

    <androidx.cardview.widget.CardView

        android:id="@+id/cardView2"
        android:layout_width="180dp"

        android:layout_height="180dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="90dp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3">


        <ImageView
            android:id="@+id/profile_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/vector_prof">

        </ImageView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardView2"
        android:layout_marginTop="30dp"

        android:text="More about Gosh"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"

        >

    </TextView>

    <TextView
        android:id="@+id/moreabout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_more"

        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"

        android:text="Gosh is located in Kisumu">

    </TextView>

    <TextView

        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/moreabout"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:text="Phone: O790796971"

        android:textSize="15dp">

    </TextView>

    <TextView

        android:id="@+id/twitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:text="Twitter: gosh "

        android:textSize="15dp">

    </TextView>

    <TextView

        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/twitter"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:text="Email: gosh@gmail.com "

        android:textSize="15dp">

    </TextView>





</RelativeLayout>